# DN_SOLUTION2 환경변수 설정
# 개발환경용 예제 파일 (.env로 복사 후 사용)

# Django 설정
SECRET_KEY=django-insecure-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=dn_solution.settings.development

# 데이터베이스 설정
DB_ENGINE=django.db.backends.postgresql
DB_NAME=dn_solution2_dev
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=postgres
DB_PORT=5432

# SQLite 사용 (개발용 대안)
USE_SQLITE=False

# 데이터베이스 복제 설정 (운영용)
DB_REPLICA_USER=postgres_replica
DB_REPLICA_PASSWORD=password_replica
DB_REPLICA_HOST=postgres_replica
DB_REPLICA_PORT=5432

# Redis 설정
REDIS_URL=redis://redis:6379/1
REDIS_SESSION_URL=redis://redis:6379/2

# Redis 클러스터 (운영용)
REDIS_URL_1=redis://redis1:6379/1
REDIS_URL_2=redis://redis2:6379/1
REDIS_URL_3=redis://redis3:6379/1

# Celery 설정
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# 서버 설정
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 이메일 설정
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@dn-solution.com

# 모니터링 도구 설정 (개발용)
PGADMIN_EMAIL=admin@dn-solution.com
PGADMIN_PASSWORD=admin

# Sentry 설정 (에러 모니터링 - 운영용)
SENTRY_DSN=

# 로깅 설정
DEBUG_SQL=False

# 파일 스토리지 (운영용)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-northeast-2

# 외부 서비스 API
SMS_API_KEY=
SMS_API_SECRET=

# 보안 설정 (운영용)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0